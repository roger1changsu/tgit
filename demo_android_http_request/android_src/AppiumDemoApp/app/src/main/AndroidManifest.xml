<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oneiter.android.appiumdemoapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HttpActivity"
            android:label="@string/title_activity_http" >
        </activity>
        <activity
            android:name=".HttpURLConnectionActivity"
            android:label="@string/title_activity_http_urlconnection" >
        </activity>
        <activity
            android:name=".HttpClientActivity"
            android:label="@string/title_activity_http_client" >
        </activity>
        <activity
            android:name=".HttpClientWithCookieActivity"
            android:label="@string/title_activity_http_client_with_cookie" >
        </activity>
    </application>

</manifest>
